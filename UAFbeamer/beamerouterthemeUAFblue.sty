\mode<presentation>

\usebeamercolor{uaf blue}
\usebeamercolor{uaf yellow}
\usebeamercolor{arsc blue}
\usebeamercolor{arsc red}
\usebeamercolor{arsc green}

\pgfdeclarehorizontalshading[white,arsc blue]{beamer@footlineshade}{3.25ex}{%
  color(0pt)=(arsc blue);
  color(\paperwidth)=(arsc blue)}



\pgfdeclareimage[width=\paperwidth]{uaf-bg}{uaf_beamer_blue_bg}



\DeclareOptionBeamer{headline}{      
	\defbeamertemplate*{headline}{UAFblue theme}
	{
	  \leavevmode%
	  \hbox{%
	  \pgfuseimage{uaf-bg}
	  }%
	  \vskip0pt%
	 }
}


\DeclareOptionBeamer{footline}{      
	\defbeamertemplate*{footline}{UAFblue theme}
	{  
	    %\begin{beamercolorbox}[wd=\paperwidth,ht=.25pt]{foot line}
    	%	\rule{\paperwidth}{.25pt}
  	%   \end{beamercolorbox}	
	  \pgfuseshading{beamer@footlineshade}%
	  \hskip-\paperwidth% 
	  \vskip-3.25ex%
	  \leavevmode% 
 
	  \hbox{%
	  \begin{beamercolorbox}[wd=.25\paperwidth,ht=2.25ex,dp=1ex,left]{footer}%
	    \usebeamerfont{section in head/foot}\hspace*{1ex}\insertsectionhead\hspace*{2ex}
	  \end{beamercolorbox}%
	  \begin{beamercolorbox}[wd=.45\paperwidth,ht=2.25ex,dp=1ex,left]{footer}%
	    \usebeamerfont{subsection in head/foot}\insertsubsectionhead
	  \end{beamercolorbox}%
	  \begin{beamercolorbox}[wd=.30\paperwidth,ht=2.25ex,dp=1ex,right]{footer}%
	    \usebeamerfont{date in head/foot}
	    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
	  \end{beamercolorbox}}%
	  \vskip0pt%
	 }
}



\ProcessOptionsBeamer

\setbeamersize{text margin left=1em,text margin right=1em}

\mode
<all>
