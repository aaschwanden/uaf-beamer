%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%                pbox                          %%%             
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setlength{\fboxrule}{1pt}

\newenvironment{pbox}[3][white]{%
  %\definecolor{boxcolor}{rgb}{#1}
  \gdef\@bcolor{#1}
  \setlength{\fboxsep}{0.005\paperwidth}
  \centering
  \begin{lrbox}{\dummybox}%
    \begin{minipage}{0.92\linewidth}
      \color{#3}{\textsf{\LARGE #2}}\color{black} \vspace{0.5em}\\ \small}{%
    \end{minipage}
  \end{lrbox}
  \raisebox{-\depth}{\hspace{-0.5em} 
    \fbox{\colorbox{\@bcolor}{\usebox{\dummybox}}}}
  \vspace{1.2em} \vfill}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%                pbox   no frame              %%%             
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

